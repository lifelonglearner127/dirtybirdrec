<div class="card w-100 mb-2">
  <div class="card-body">
    <% if activity['actor_count'] == 1 %>
      <%= activity['activities'][0]['actor'].name %> commented <%= pluralize(activity['activity_count'], 'item') %>
    <% elsif activity['actor_count'] == 2 %>
      <%= activity['activities'][0]['actor'].name %> and <%= activity['activities'][1]['actor'].name %> commented <%= activity['activity_count'] %> items
    <% else %>
      <%= activity['activities'][0]['actor'].name %>, <%= activity['activities'][1]['actor'].name %> and <%= activity['actor_count'].name - 2 %> more commented <%= activity['activity_count'] %> items
    <% end %>

    <div class="pull-right">
      <i class="glyphicon glyphicon-time"></i> <%= time_ago_in_words(activity['updated_at']) %> ago
    </div>

    <% for activity in activity['activities'] %>
      <%= render_activity activity %>
    <% end %>
  </div>
</div>