<div class="mb-2">
  <% if activity['actor_count'] == 1 %>
    <%= link_to activity['activities'][0]['actor'].name, activity['activities'][0]['actor'] %>
    followed you
  <% elsif activity['actor_count'] == 2 %>
    <%= link_to activity['activities'][0]['actor'].name, activity['activities'][0]['actor'] %>
    and
    <%= link_to activity['activities'][1]['actor'].name, activity['activities'][1]['actor'] %>
    followed you
  <% else %>
    <%= link_to activity['activities'][0]['actor'].name, activity['activities'][0]['actor'] %>,
    <%= link_to activity['activities'][1]['actor'].name, activity['activities'][1]['actor'] %>
    and 
    <%= activity['actor_count'] - 2 %> 
    more followed you 
  <% end %>

  <%= time_ago_in_words(activity['updated_at']) %> ago
</div>