<div class="container">
  <h1>Last joined Users</h1>
  <ol>
    <% @leader_users.each do |user| %>
      <li>
        <%= link_to user_path(user) do %>
          <%= user.name %>
        <% end %>
        has <%= user.points %> points 
        <%= "and #{user.badges.order(points: :asc).last.name}" if user.badges.present? %>
      </li>
    <% end %>
  </ol>
</div>