<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <div class="row">
        <div class="col-sm-5">
          <div class="card w-100 mb-1">
            <div class="card-body">
              <%= image_tag current_user.avatar.url if current_user.avatar.present? %>
            </div>
          </div>
        </div>
        
        <div class="col-sm-7">
          <div class="card w-100 mb-1">
            <div class="card-body">
              Leaderboard stats
            </div>
          </div>

          <div class="card w-100">
            <div class="card-body">
              Achievement Badges
            </div>
          </div>
        </div>
      </div>

      <% for activity in @activities %>
        <%= render_activity activity  %>
      <% end %>
    </div>

    <div class="col-sm-4">
      <div class="card w-100 mb-1">
        <div class="card-body">
          Add Friend to my feed
        </div>
      </div>

      <div class="card w-100 mb-1">
        <div class="card-body">
          Friends
        </div>
      </div>

      <div class="card w-100 mb-1">
        <div class="card-body">
          Artists following
        </div>
      </div>

      <div class="card w-100 mb-1">
        <div class="card-body">
          Playlist of favorite tracks
        </div>
      </div>
    </div>
  </div>
</div>