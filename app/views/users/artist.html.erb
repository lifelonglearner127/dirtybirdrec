<div class="artist-present">
  <% if @artist.artist_info && @artist.artist_info.avatar.present? %>
    <%= image_tag  @artist.artist_info.avatar.url, class: "artist-avatar" %>
  <% elsif @artist.avatar.present? %>
    <%= image_tag @artist.avatar.url, class: "artist-avatar" %>
  <% end %>
  <%= image_tag 'icons/point-green-big.svg', class: "artist-online"%>

  <div class="artist-bgrd" >
    <%= image_tag 'dj.jpg'%>
  </div>

  <%= render 'follows/follow_button', target: @artist %>

    <div class="artist-name">
      <h1><%= @artist.name.upcase %></h1>
      <span>
        <%= "#{@artist.artist_info.genre} / " if @artist.artist_info && @artist.artist_info.genre.present? %>
        <b><%= @artist.followers.count %> Followers</b>
      </span>
    </div>

  <% if @artist.artist_info %>
    <div class="artist-social">
      <%= link_to image_tag('icons/artist-dirtybird.svg'), 
            @artist.artist_info.instagram if @artist.artist_info.instagram %>
      <%= link_to image_tag('icons/artist-facebook.svg'), 
            @artist.artist_info.facebook if @artist.artist_info.facebook %>
      <%= link_to image_tag('icons/artist-twitter.svg'), 
            @artist.artist_info.twitter if @artist.artist_info.twitter %>
    </div>

    <div class="artist-since">
      <%= image_tag 'icons/egg.svg' %>
      DIRTYBIRD ARTIST<br>
      <span>Since <%= @artist.created_at.strftime("%Y") %></span>
    </div>

    <div class="artist-bio">

      <span><%= @artist.artist_info.bio_short %></span>
      <a href="#" class="artist-bio-long">Read more</a>
      <span><%= @artist.artist_info.bio_long %></span>
      <a href="#" class="artist-bio-short"><br>Read less</a>
    </div>

  <% end %>
</div>


<ol>
  <% if @followers.count > 0 %>
    Fans following this artist
    <% @followers.each do |user| %>
      <li><%= link_to user.name, user_path(user) %></li>
    <% end %>
  <% else %>
    No followers yet
  <% end %>
</ol>

<ol>
  <% if @releases.count > 0 %>
    Releases
    <% @releases.each do |release| %>
      <li><%= link_to release.title, release_path(release) %></li>
    <% end %>
  <% else %>
    No releases yet
  <% end %>
</ol>


<div>
  <iframe id="ytplayer" type="text/html" width="auto" height="auto"
    src="https://www.youtube.com/embed/<%= @artist.artist_info.parse_youtube if @artist.artist_info %>"
    frameborder="0"></iframe>
</div>



