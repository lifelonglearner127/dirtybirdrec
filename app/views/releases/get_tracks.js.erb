var tracks = [];
<% @tracks.each do |track| %>
  tracks.push({ 
    'id': '<%= track.id %>',
    'title': '<%= track.title %>', 
    'artists': '<%= track.users.map(&:name).join(' feat. ') %>', 
    'mp3': {'url': '<%= track.get_url %>' }
  });
<% end %>

if (tracks.length > 0) {
  setPlaylist(tracks, true);

  $("[id^='play-release-']").show().next('.jp-controls').css({'display': 'none'});
  $('#play-release-<%= @release.id %>').hide().next('.jp-controls').css({'display': 'inline-flex'});
}