var button = $('<%= ".follow-#{target['followable_type']}-#{target['followable_id']}" %>');

<% if action_name == 'create' %>
  button.replaceWith(`
      <%= escape_javascript(
        render(partial: 'follows/unfollow', 
          locals: { target: target.followable, text: text, classes: classes } )
      ) %>
    `);
  $('.notice').text('You are now following this feed').show();
<% else %>
  button.replaceWith(`
      <%= escape_javascript(
        render(partial: 'follows/follow', 
          locals: { target: target.followable, text: text, classes: classes } )
      ) %>
    `);
  $('.notice').text('You are now not following this feed').show();
<% end %>
