<div class="container">
  <%=form_for @topic do |f| %>
    <%= f.hidden_field :category_id, value: @category_id %>

    <div class="form-group">
      <%= f.label :title, "Title" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :text, "Body" %>
      <%= f.text_area :text, class: "form-control" %>
    </div>
    
    <%= f.submit "Create a topic", class: "btn" %>
  <% end %>
</div>