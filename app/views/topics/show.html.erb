<div class="topics-header">
  <%#= image_tag(@category.image) if @category.image.present? %>
  <%= image_tag('crowd.jpg') %>
</div>

<%#= render 'topics/breadcrumbs' %>

<div class="topics-panel c-panel bg-white">
  <%= link_to chirp_path(@topic.category), class: 'topics-back' do %>
   <%= image_tag('icons/icon-chevron-left.svg') %>
  <% end %>

  <h1><%= @topic.title %></h1>
  <p><%= @topic.text %></p>
  
  <div class="text-center"><%= render 'follows/follow_button', target: @topic %></div>

  <div class="feed-block">
    <%= render @topic.posts.parents_posts.order(created_at: :desc) %>
    <%= render 'form', parent_id: nil %>
  </div>
</div>
