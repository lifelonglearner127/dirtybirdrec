<div class="container">

<nav aria-label="breadcrumb">
  <ol class='breadcrumb'>
    <% breadcrumb_trail do |crumb| %>
      <li class="breadcrumb-item <%= crumb.current? ? 'active' : '' %>">
        <%= link_to_unless crumb.current?, crumb.name, crumb.url, (crumb.current? ? {'aria-current' => 'page'} : {}) %>
      </li>
    <% end %>
  </ol>
</nav>

  <h3><%= @category.title %></h3>

  <%= link_to "Post a new topic", new_chirp_topic_path( chirp_id: @category.id ),
      class: "btn btn-secondary mb-3" %>

  <% @category.topics.each do |topic| %>
    <div class="list-group w-50">
      <div class="list-group-item mb-2">
        <%= link_to topic.title, chirp_topic_path( @category, topic ) %>
        <%= link_to "Follow", "#", class: "float-right" %>
      </div>
    </div>
  <% end %>
</div>
