<p class="feed-posted"> 
  <%= time_ago_in_words(activity['time'].in_time_zone) %> ago.
</p>

<%= link_to activity['actor'] do %>
  <%= activity['actor'].name %>
  <%= image_tag activity['actor'].avatar.url, class: "feed-avatar" %>
<% end %>

<em>
  has rated
  <%= activity['object'].class.to_s.downcase %>
</em>

<%= link_to activity['object'].title.truncate(20), activity['object'] %>

<hr class="feed-divider">