<p class="feed-posted"> 
  <%= time_ago_in_words(activity['time'].in_time_zone) %> ago.
</p>
  
<%= link_to activity['actor'].class, activity['actor'] %>
<em>
  commented
  <%= activity['target'].class.to_s.downcase %>
</em>
<% if activity['object'].class == Post %>
  <%= link_to activity['target'].title, activity['target'] %>
<% else %>
  <%= link_to activity['target'].try(:title), activity['target'] %>
<% end %>

<hr class="feed-divider">