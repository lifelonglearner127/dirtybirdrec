<p class="feed-posted"> 
  <%= time_ago_in_words(activity['time'].in_time_zone) %> ago.
</p>
  
<%= link_to activity['actor'].name, activity['actor'] %>
<em>
  has commented on
</em>
<% if activity['target'].class == User %>
  <%= link_to activity['target'].name + '\'s', activity['target'] %>
  <em>comment</em>
  <%= activity['object'].parent.body.truncate(20) %>
<% else %>
  <% if activity['target'].try(:title) %>
    <%= link_to activity['target'].title, activity['target'] %>
  <% else %>
    <%= link_to activity['target'].try(:body), activity['target'] %>
  <% end %>
<% end %>

<hr class="feed-divider">