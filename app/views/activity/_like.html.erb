<%#= link_to image_tag(activity['actor'].avatar.thumb.url, class: "post-user-avatar"), activity['actor'], class: "post-owner" %>
<p class="feed-posted"> 
  <%= time_ago_in_words(activity['time'].in_time_zone) %> ago.
</p>

<%= link_to activity['actor'].name, activity['actor'] %>
<em>likes <%= activity['object'].class.to_s.downcase %></em>

<% if activity['object'].class == Release %>
  <%= link_to activity['object'].try(:title).try(:truncate, 25), activity['object'] %>
<% end %>

<% if activity['object'].class == Post %>
  <%= link_to activity['object'].topic.try(:title).try(:truncate, 25), activity['object'].topic %>
<% end %>

<% if activity['object'].class == Comment && activity['object'].commentable.class == User %>
  <%= "on #{activity['object'].commentable.roles.first.name}" %>
  <%= link_to activity['object'].commentable.try(:name), activity['object'] %>
<% end %>

<hr class="feed-divider">