<%#= link_to image_tag(activity['actor'].avatar.thumb.url, class: "post-user-avatar"), activity['actor'], class: "post-owner" %>
<p class="feed-posted">
  <%= time_ago_in_words(activity['time'].in_time_zone) %> ago.
</p>

<%= link_to activity['actor'].name, activity['actor'] %> 
<small><em>is watching</em></small>
<% if activity['object'].class.to_s == "User" %>
  <% if activity['object'].has_role?(:artist) %>
    artist
  <% elsif activity['object'].has_role?(:admin) %>
    admin
  <% elsif activity['object'].has_role?(:fan) %>
    user
  <% end %>
  <%= link_to activity['object'].name, activity['object'] %>
<% elsif activity['object'].class.to_s == "Release" %>
  release <%= link_to activity['object'].title, activity['object'] %>
<% elsif activity['object'].class.to_s == "Announcement" %>
  announcement <%= link_to activity['object'].title, activity['object'] %>
<% end %>

<hr class="feed-divider">
