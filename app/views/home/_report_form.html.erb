<%= form_tag report_path, remote: true, class: "w-100" do %>
  <%= label_tag "text-#{object.id}", "Text", class: "sr-only" %>
  <%= text_area_tag :text, nil, class: "form-control mb-1", id: "text-#{object.id}" %>
  <%= hidden_field_tag :type, object.class.to_s, id: "type-#{object.id}" %>
  <%= hidden_field_tag :id, object.id, id: "id-#{object.id}" %>
  <%= submit_tag "Report", class: "btn c-btn-blue" %>
<% end %>
