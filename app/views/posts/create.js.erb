<% if @post.parent_id.present? %>
  $('#post_text-<%= @post.parent_id %>').val('').parents('.feed-form')
      .before("<%= escape_javascript(render partial: 'posts/reply', locals: {reply: @post} ) %>");

  $('#post_text-<%= @post.parent_id %>').parents('.feed-item').find('.comments-count').text( parseInt( $('#post_text-<%= @post.parent_id %>').parents('.feed-item').find('.comments-count').text() ) + 1 );
<% else %>
  $('.feed-block .feed-form').before("<%= escape_javascript(render(@post)) %>");
  $('#post_text').val('').focus();
<% end %>