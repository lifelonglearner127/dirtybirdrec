<% 
  image = case style
  when 'thumbup' then 'icons/like-thumbup.svg' 
  when 'thumbup-reply' then 'icons/like-thumbup.svg' 
  when 'release' then 'icons/like-release.svg' 
  else 'icons/like.svg' end
%>

<%= link_to image_tag(image), likes_path(likeable_type: like[:likeable_type], 
    likeable_id: like[:likeable_id], style: style), 
    id: "like-#{like[:likeable_type]}-#{like[:likeable_id]}",
    method: :post, remote: true, class: "like-button"
%>