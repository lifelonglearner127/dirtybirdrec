<div class="likes-count <%= 'd-none' unless object.likes.count > 0 %>">
  <a href="#" tabindex="0" data-toggle="popover" data-placement="right" data-content='
    <% object.likes.order(created_at: :desc).limit(40).each do |like| %>
      <%= link_to user_path(like.user_id) do %>
        <%= image_tag like.user.avatar.thumb, class: "avatar-micro", title: "#{like.user.name}" %>
      <% end %>
    <% end %>' data-trigger="focus" data-html="true" onclick="return false;" class="likes-count-btn">
    <span class="badge badge-secondary" title="Likes"><%= object.likes.count %></span>
  </a>
</div>
